{
  "manifest_version": 2,

  "name": "Attendance Tracker Plugin",
  "description": "This extension will monitor you lecture attendance.",
  "version": "1.0",

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": ["tabs"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
